"
DEPEND="${RDEPEND}
	>=dev-haskell/cabal-2.2.0.1
"

src_prepare() {
	default
	cabal_chdeps \
		'ghc-prim <0.7' 'ghc-prim'
}

src_configure() {
	haskell-cabal_src_configure \
		--flag=-developer
}
