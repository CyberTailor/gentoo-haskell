EAPI=6

# ebuild generated by hackport 0.5.6.9999
#hackport: flags: -more-tests

CABAL_FEATURES="lib profile haddock hoogle hscolour" # Broken test-suite: compiler-dependent
inherit haskell-cabal

DESCRIPTION="GHC plugin to do inspection testing"
HOMEPAGE="https://github.com/nomeata/inspection-testing"
SRC_URI="mirror://hackage/packages/archive/${PN}/${PV}/${P}.tar.gz"

LICENSE="MIT"
SLOT="0/${PV}"
KEYWORDS="~amd64 ~x86"
IUSE=""

RESTRICT=test # examples/Fusion.hs:22:1: sumUp1 === sumUp2 failed

RDEPEND="dev-haskell/mtl:=[profile?]
	>=dev-lang/ghc-8.0.1:=
	>=dev-lang/ghc-8.0.2:=[profile?] <dev-lang/ghc-8.7:=[profile?]
"
DEPEND="${RDEPEND}
	>=dev-haskell/cabal-1.24.0.0
"

src_prepare() {
	default

	cabal_chdeps \
		'ghc >= 8.0.2 && <8.6' 'ghc >= 8.0.2 && <8.7'
}

src_configure() {
	haskell-cabal_src_configure \
		--flag=-more-tests
}
