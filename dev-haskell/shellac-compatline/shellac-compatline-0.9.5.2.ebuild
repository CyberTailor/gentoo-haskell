EAPI=5

# ebuild generated by hackport 0.4.2.9999

CABAL_FEATURES="lib profile haddock hoogle hscolour"
inherit haskell-cabal

MY_PN="Shellac-compatline"
MY_P="${MY_PN}-${PV}"

DESCRIPTION=""compatline" backend module for Shellac"
HOMEPAGE="http://rwd.rdockins.name/shellac/home/"
SRC_URI="mirror://hackage/packages/archive/${MY_PN}/${PV}/${MY_P}.tar.gz"

LICENSE="BSD"
SLOT="0/${PV}"
KEYWORDS="~amd64 ~x86"
IUSE="+useeditline usereadline"

RDEPEND=">=dev-haskell/shellac-0.9:=[profile?]
	>=dev-lang/ghc-7.4.1:=
	useeditline? ( dev-haskell/shellac-editline:=[profile?] )
	usereadline? ( dev-haskell/shellac-readline:=[profile?] )
"
DEPEND="${RDEPEND}
	>=dev-haskell/cabal-1.2.2
"

S="${WORKDIR}/${MY_P}"

src_configure() {
	haskell-cabal_src_configure \
		$(cabal_flag useeditline useeditline) \
		$(cabal_flag usereadline usereadline)
}
