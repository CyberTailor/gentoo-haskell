			>=dev-haskell/mtl-1.1
			<dev-haskell/mtl-2.2
			>=dev-haskell/network-2.2
			<dev-haskell/network-2.5
			=dev-haskell/setenv-0.1*
			=dev-haskell/tar-0.4*
			>=dev-haskell/transformers-0.2
			<dev-haskell/transformers-0.4
			=dev-haskell/zlib-0.5*
		)"

# currently we don't run the tests. if we want to, enable -fbuild-tests and
# unpack the cabal-install-0.8.2 into the root of the source tree.

src_configure() {
	haskell-cabal_src_configure \
		$(cabal_flag no-cabal-dev no-cabal-dev)
}
