EAPI=6

# ebuild generated by hackport 0.5.6.9999
#hackport: flags: -check-bounds

CABAL_FEATURES="lib profile haddock hoogle hscolour" # Drop test-suite: cyclic dependency
inherit haskell-cabal

DESCRIPTION="Integer logarithms"
HOMEPAGE="https://github.com/Bodigrim/integer-logarithms"
SRC_URI="mirror://hackage/packages/archive/${PN}/${PV}/${P}.tar.gz"

LICENSE="MIT"
SLOT="0/${PV}"
KEYWORDS="~amd64 ~x86"
IUSE="+integer-gmp"

RESTRICT=test # dependency cycle: integer-logarithms[test]->tasty->wcwidth[cli]->attoparsec->scientific->integer-logarithms

RDEPEND=">=dev-haskell/nats-1.1:=[profile?] <dev-haskell/nats-1.2:=[profile?]
	>=dev-lang/ghc-7.4.1:=
	!integer-gmp? ( dev-haskell/integer-simple:=[profile?] )
"
DEPEND="${RDEPEND}
	>=dev-haskell/cabal-1.10
"

src_prepare() {
	default

	cabal_chdeps \
		'base >= 4.3 && < 4.13' 'base >= 4.3' \
		'QuickCheck >= 2.10 && < 2.12' 'QuickCheck >= 2.10 && < 2.13'
}

src_configure() {
	haskell-cabal_src_configure \
		--flag=-check-bounds \
		$(cabal_flag integer-gmp integer-gmp)
}
