src_prepare() {
	if use examples; then
		eapply "${FILESDIR}/${P}-add-flags.patch"
	else
		eapply "${FILESDIR}/${P}-add-flags-no-examples.patch"
	fi
	default
	cabal_chdeps\
		'path >=0.6 && <0.8' 'path >=0.6'
}

src_configure() {
	haskell-cabal_src_configure \
		--flag=-dev \
		$(cabal_flag examples examples)\
		$(cabal_flag executable executable)
}

